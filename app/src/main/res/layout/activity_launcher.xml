<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/color_dc"
    tools:context="com.barryzhang.gankio.ui.LauncherActivity">

    <com.barryzhang.gankio.ui.view.TintStatusBar
        android:id="@+id/tintBar"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000" />


    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/imageViewLauncher"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        app:placeholderImage="@mipmap/loading"
        app:placeholderImageScaleType="centerCrop"
        />

</RelativeLayout>
